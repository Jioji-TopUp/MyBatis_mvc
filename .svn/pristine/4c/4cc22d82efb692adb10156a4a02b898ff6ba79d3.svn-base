.body {
	font-family: "SimHei", "Arial", sans-serif;
	font-size: 14px;
}

.center {
	position: absolute;
	width: 300px;
	height: 420px;
	left: 52%;
	top: 30%;
	
	margin: -100px 0px 0px -180px;
	border: 0px solid #F00;
}

.button {
	-webkit-transition: all .25s ease-in-out;
	transition: all .25s ease-in-out;
	background-color: #00BFFF;
	border: none;
	color: white;
	border-radius: 8px;
	padding: 10px 20px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 10px;
	margin: 4px 2px;
	cursor: pointer;
}
.button right{
	text-align:center;
}
