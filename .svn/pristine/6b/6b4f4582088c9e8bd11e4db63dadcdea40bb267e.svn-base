.menuTree {
	hight: 400px;
}

.menuTree div {
	padding-left: 1px;
}

.menuTree div ul {
	overflow: hidden;
	display: none;
	height: auto;
	margin: 0;
}

.menuTree span {
	display: block;
	height: 20px;
	line-height: 25px;
	padding-left: 5px;
	margin: 1px 0;
	cursor: pointer;
	border-bottom: 1px solid #CCC;
}

.menuTree span:hover {
	background-color: #e6e6e6;
	color: #cf0404;
}

.menuTree a {
	color: #333;
	text-decoration: none;
}

.menuTree a:hover {
	color: #06F;
}

.menuTree span {
	height: 30px;
}